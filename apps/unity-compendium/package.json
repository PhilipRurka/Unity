  "dependencies": {
    "@unity/frontend-dependencies": "*",
    "contentful-import": "^9.0.4",
    "react-instantsearch": "^7.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
