    "@types/react-instantsearch": "^6.10.4",
    "@unity/frontend-dev-dependencies": "*",
    "cli-spinner": "^0.2.10",
    "contentful-management": "^11.25.5",
    "crypto": "^1.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": "20"
  },
  "type": "module",
  "ntl": {
    "runner": "yarn",
