{
  "extends": ["next/core-web-vitals", "airbnb-base", "airbnb-typescript/base", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/extensions": "off"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "public",
    "postcss.config.cjs",
    "prettier.config.cjs",
    "migrate-mongo-config.js",
    "next.config.mjs",
    "mongodb/*",
    "migrations/*",
    "__mocks__/*",
    "@types/contentful-codegen/*"
  ]
}
